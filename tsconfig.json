{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "noEmitHelpers": true,
    "sourceMap": true,
    "target": "ES5",

    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny" : false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    "pretty": true
  }
}
