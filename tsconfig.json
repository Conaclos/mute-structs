{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noEmitHelpers": false,
    "sourceMap": true,
    "target": "ES5",

    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny" : false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    "pretty": true
  },
  "files": [
    "src/global.d.ts",
    "src/identifier.ts",
    "src/identifierinterval.ts",
    "src/identifiertuple.ts",
    "src/idfactory.ts",
    "src/iteratorhelperidentifier.ts",
    "src/ropesnodes.ts",
    "test/identifier.test.ts",
    "test/identifierinterval.test.ts",
    "test/identifiertuple.test.ts",
    "test/idfactory.test.ts",
    "test/iteratorhelperidentifier.test.ts",
    "test/ropesnodes.test.ts"
  ],
  "exclude": [
    "node_modules/",
    "src/",
    "test/"
  ]
}
