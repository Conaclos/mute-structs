{
  "compilerOptions": {
    "allowJs": false,
    "declaration": true,
    "lib": ["es6"],
    "module": "commonjs",
    "noEmitHelpers": false,
    "sourceMap": true,
    "target": "ES5",

    "outDir": "./dist",

    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny" : false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "strictNullChecks": true,

    "pretty": true
  },
  "exclude": [
    "test/tree.test.ts"
  ]
}
